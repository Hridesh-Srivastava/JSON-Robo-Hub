{
    "version": 2,
    "builds": [
      {
        "src": "public/**/*",
        "use": "@vercel/static"
      },
      {
        "src": "index.js",
        "use": "@vercel/node",
        "config": {
          "includeFiles": ["views/**"]
        }
      }
    ],
    "routes": [
      {
        "src": "/styles/(.*)",
        "dest": "/public/styles/$1"
      },
      {
        "src": "/(.*\\.(css|png|jpg|svg))",
        "dest": "/public/$1"
      },
      {
        "src": "/(.*)",
        "dest": "/index.js"
      }
    ]
  }